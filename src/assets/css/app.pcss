/* d3 chart styling */
.interdeps__container {
  .node {
    font-size: 1.1rem;
    font-weight: 300;
    fill: $textBright;
    @include darkTheme {
      fill: $emphasisGrey;
    }
  }

  .circle-bg {
    /* fill: $white;
    stroke: $lighterGrey;
    stroke-width: 1; */
    fill: $borderGrey;
    @include darkTheme {
      stroke: none;
      fill: $black;
    }
  }

  .node:hover {
    fill: #000;
  }

  .link {
    stroke: $emphasisGrey;
    @include darkTheme {
      stroke: $darkerGrey;
    }
    stroke-opacity: 0.4;
    fill: none;
    pointer-events: none;
  }

  .node:hover,
  .node--source,
  .node--target {
    font-weight: 700;
  }

  .node--source {
    fill: $darkGreen;
    @include darkTheme {
      fill: $darkYellow;
    }
  }

  .node--target {
    fill: $darkRed;
    @include darkTheme {
      fill: $darkRed;
    }
  }

  .link--source,
  .link--target {
    stroke-opacity: 1;
    stroke-width: 2px;
  }

  .link--source {
    stroke: $darkRed;
    @include darkTheme {
      stroke: $darkRed;
    }
  }

  .link--target {
    stroke: $darkGreen;
    @include darkTheme {
      stroke: $darkYellow;
    }
  }

  a:hover {
    text-decoration: none;
  }
