.pagination__bubble {
  border: 2px solid $white;
  @include darkTheme {
    border-color: $surfaceDark;
  }

  /* align-content: center;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center; */

  width: 3rem;
  height: 3rem;
  line-height: 2.7rem;
  border-radius: 99rem;
  text-align: center;

  &:hover {
    text-decoration: none;

    border-color: $blue;
    @include darkTheme {
      border-color: $darkRed;
      text-decoration: none;
    }
  }

  text-decoration: none;
  @include darkTheme {
    text-decoration: none;
  }

  &[aria-current="page"] {
    background-color: $yellow;
    text-decoration: none;
    &:hover {
      background-color: $blue;
      text-decoration: none;
    }

    @include darkTheme {
      color: $surfaceDark;
      background-color: $darkYellow;
      border-color: $darkYellow;
      text-decoration: none;
      &:hover {
        background-color: $darkRed;
        border-color: $darkRed;
        text-decoration: none;
      }
    }
  }
}

/* single / post / article page */
/* -------------------------------------------------------------------------- */

.layout-list:not(.layout-page-open-source) aside section {
  border-top: $border;
  @include darkTheme {
    border-top-color: $borderDark;
  }

  padding-top: 2rem;

  *:last-child {
    margin-bottom: 0;
  }

  p,
  ul {
    margin-bottom: 2rem;
  }

  ul {
    padding-left: 2rem;
  }
}

@media (min-width: $mid) {
  .two-thirds {
    width: 66%;
  }

  .one-third {
    width: 33%;
  }

  .layout-list:not(.layout-page-open-source) aside {
    padding-top: 2rem;
    padding-left: 2rem;

    font-size: 1.4rem;
    line-height: 1.8rem;

    section {
      border-top: 0;
      padding-top: 0;
      border-left: 1px dashed $borderGrey;
      @include darkTheme {
        border-left-color: $borderDark;
      }
      padding: 2rem 0 2rem 2rem;
    }
  }
}

@media (min-width: 800px) {
  .layout-list:not(.layout-page-open-source) aside {
    font-size: inherit;
    line-height: inherit;
  }
}

.layout-post {
  p,
  ul,
  ol,
  pre,
  table,
  blockquote {
    margin-top: 0;
    margin-bottom: 3rem;
  }

  article
    > *:not(header, h1, figure, pre, code, img, .iframes-wrapper, iframe, .code-wrapper, div),
  article > div[class^="box-"] > p {
    max-width: 70rem;
    margin-left: auto;
    margin-right: auto;
  }

  .code-wrapper pre {
    margin: 0 auto;
  }

  .hero-img {
    max-width: 90rem;
    margin: 4rem auto;
  }

  .extra-mt {
    padding-top: 6rem;
  }

  article h1 {
    text-align: center;
    @media (min-width: $mid) {
      padding: 0 4rem;
      margin-bottom: 4.6rem;
    }
    @media (min-width: $thousand) {
      padding: 0 4rem;
    }
  }

  article p,
  article .meta,
  article ul,
  article li,
  article div {
    /* all text is larger on single-page layouts */
    font-size: 2.3rem;
    line-height: 1.69;
  }

  article .meta {
    text-align: center;
    font-size: 2.3rem;
    line-height: 3.3rem;
  }

  .entry-tags {
    font-size: 1.8rem;
  }

  .author {
    a:after {
      text-decoration: none;
      @include darkTheme {
        text-decoration: none;
      }
    }
    &:hover {
      @include underline($blue);
    }
    @include darkTheme {
      &:hover {
        color: $borderGrey;
        @include underline($darkRed);
      }
    }
  }

  .iframes-wrapper {
    width: 100%;
    iframe {
      width: 100%;
      height: 60rem;
    }
  }

  /* https://github.com/ReAlign/markdown-it-copy/blob/master/theme/default.css */
  pre {
    position: relative;
  }
  .m-mdic-copy-wrapper {
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    right: 0;
    font-family: monospace;
  }
  .m-mdic-copy-wrapper span.u-mdic-copy-code_lang {
    /* position: absolute; */
    /* top: 0.5rem; */
    /* left: 1rem; */
    display: inline-block;
    padding: 0.5rem 1rem;
    font-size: 1.2rem;
    line-height: 1.8rem;
    color: $emphasisGrey;
  }
  .m-mdic-copy-wrapper div.u-mdic-copy-notify {
    display: none;
    position: absolute;
    right: 4rem;
    top: 0;
    padding: 0.5rem 1rem;
    border: 0;
    background: none;
    font-size: 1.2rem;
    line-height: 1.8rem;
    outline: none;
    opacity: 1;
    color: $emphasisGrey;
  }
  .m-mdic-copy-wrapper button.u-mdic-copy-btn {
    float: right;
    padding: 0.5rem 1rem;
    border: 0;
    background: none;
    font-size: 1.2rem;
    line-height: 1.8rem;
    color: $emphasisGrey;
    font-family: monospace;
    outline: none;
    cursor: pointer;
    transition: opacity 0.2s;
  }
  .m-mdic-copy-wrapper button.u-mdic-copy-btn:hover {
    opacity: 1;
  }
}

.layout-post figure {
  margin: 3rem 0;

  text-align: center;

  img {
    width: 100%;
    height: auto;
  }
}

figcaption {
  text-align: center;
  font-style: italic;
}

/* reduce hero image width */
.post-image-hero {
  max-width: 70rem;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  .direct-link {
    display: none;
    color: $borderGrey;
    &:after {
      text-decoration: none;
    }
    @include darkTheme {
      color: $borderDark;
      &:after {
        text-decoration: none;
      }
    }
  }
  &:hover {
    .direct-link {
      display: inline;
      &:after {
        text-decoration: none;
      }
      &:after {
        color: $green;
        @include darkTheme {
          color: $textDark;
        }
      }
    }
  }
  .direct-link:hover {
    color: $green;
    @include darkTheme {
      color: $darkerGrey;
      &:after {
        text-decoration: none;
      }
    }
  }
}

.list-container {
  position: relative;
  z-index: 20;
  margin-top: 8rem;
}

pre[class*="language-"] {
  padding: 3rem 2rem 2rem;
  margin: 0;
  display: inline-block;
  &:before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2rem;
    /* background-color: $borderDark; */
    background: rgb(18, 18, 18);
    background: linear-gradient(
      90deg,
      rgba(18, 18, 18, 0) 0%,
      rgba(43, 43, 43, 1) 50%,
      rgba(18, 18, 18, 0) 100%
    );
  }
}

.package-body__extras {
  p > code {
    display: inline-block;
    @include darkTheme {
      background-color: $textDark;
      color: $black;
    }
  }
}

.code-wrapper {
  display: flex;
  text-align: left;

  .package-body__extras & {
    text-align: left;
    width: 100%;
    pre {
      text-align: left;
      width: 100%;
      display: block;

      /* code background on a sidebar is set to blend with sidebar's */
      /* background-color: $lighterGrey; */
      @include darkTheme {
        /* background-color: $borderDark; */
        background-color: $black;
      }

      &:before {
        background: rgb(53, 53, 53);
        background: linear-gradient(
          90deg,
          rgba(53, 53, 53, 1) 20%,
          rgba(18, 18, 18, 0) 100%
        );
      }
      code {
        border: none;
        margin-right: 2rem;
      }
    }
  }

  overflow-x: auto;
  pre {
    position: relative;
    &:before {
      color: $borderGrey;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      text-align: center;
      padding: 0;
      content: attr(rel);
      font-size: 0.7em;

      .package-body__extras & {
        text-align: left;
        padding-left: 2rem;
        /* width: 100%; */
      }
    }
  }
  code {
    margin: 0 auto;
  }
  pre,
  code {
    max-width: none !important;
  }
}

article,
.package-body__content {
  div[class^="box-"] {
    float: right;
    margin: 6rem 0 3rem 3rem;
    max-width: 50rem;
    padding: 3rem 2rem;
    background-color: $lighterGrey;
    @include darkTheme {
      background-color: #262626; /* 15% */
    }

    p {
      font-size: 0.8em;
    }

    &:before {
      display: block;
      margin: 0 6rem 4rem 0;
      float: left;
    }

    /* old-school "group" class */
    &:after {
      content: "";
      display: table;
      clear: both;
    }
  }
}

article,
.package-body__content {
  div.box-beware {
    &:before {
      content: "BEWARE";
    }
  }
}

article,
.package-body__content {
  div.box-tip {
    &:before {
      content: "TIP";
    }

    p:last-child {
      margin-bottom: 0;
    }
  }
}

.package-body__content {
  th,
  td {
    font-size: 1.6rem;
    line-height: 1.4;

    @media (min-width: 1200px) {
      font-size: inherit;
    }

    /* width: 20%; */
    &:first-child {
      width: auto;
      code {
        font-size: 1.4rem;
      }
    }
  }

  & > figure {
    /* flex is needed to make images fit beside sidebar */
    display: flex;
    margin-bottom: 2.1rem;
  }
}

/* open source homepage */
/* -------------------------------------------------------------------------- */

.layout-page-open-source {
  .content-main__inner > h1 {
    @media (min-width: $mid) {
      /* to place it above green absolute sidebar */
      position: absolute;
      z-index: 5;
      padding-left: 2rem;
    }

    @media (min-width: 800px) and (max-width: $thousand) {
      right: 2rem;
      font-size: 12rem;
      max-width: 60rem;
      text-align: right;
      letter-spacing: -0.06em;
    }

    @media (min-width: 880px) and (max-width: $thousand) {
      right: 7rem;
    }

    color: #040305; /* 2% */
    opacity: 0.9;

    @include darkTheme {
      color: #fffbf2; /* 100 */
      opacity: 0.45;
    }
  }

  .content-row > h2 {
    sup {
      right: 5.8rem;
    }
  }

  .star-under-header {
    display: none;
    @include darkTheme {
      opacity: 0.6;
    }
    @media (min-width: 500px) and (max-width: $thousand) {
      display: block;
      position: absolute;
      top: 40rem;
      right: 4rem;
      text-align: right;
    }
    @media (min-width: 800px) {
      top: 60rem;
    }
  }

  h2 {
    position: relative;
    display: inline-block;
    padding-right: 6rem;

    @media (min-width: $mid) {
      padding-right: 4rem;
    }
    @media (min-width: $thousand) {
      margin-left: 2rem;
    }

    sup {
      top: -1rem;
    }
  }

  #table-of-contents,
  #flagship-libraries,
  #contributing {
    padding-right: 0;
  }

  .top-row {
    & > .interdeps-chart {
      display: none;

      @media (min-width: $mid) {
        display: block;
      }
    }

    .aside__outer-container {
      max-width: 34.6rem;
    }

    & > aside {
      /* on tablet, reduce the gap above the interdeps chart */
      margin-bottom: -60rem;
      @media (min-width: $mid) {
        margin-bottom: -45rem;
        padding-left: 5rem;
      }
      @media (min-width: $thousand) {
        padding-left: 0;
        margin-bottom: 0;
      }
    }

    @media (min-width: $thousand) {
      & > aside {
        width: 33%;
      }

      & + .separator {
        margin: 14rem 0 0;
      }

      & > .interdeps-chart {
        left: 33%;
        margin-top: 10rem;
        width: calc(50vw + 16%);
        max-width: 85vmin;
        min-width: 67%;

        /* fixed ratio-related chunk starts: */
        display: inline-block;
        position: relative;
        /* fixed ratio ends */

        /* another fixed ratio-related chunk starts: */
        &:after {
          padding-top: 100%;
          /* min-height: 80rem; */
          /* 1:1 ratio */
          display: block;
          content: "";
        }
        /* fixed ratio ends */

        .interdeps__container {
          position: absolute;
          top: 0;
          bottom: 0;
          right: 0;
          left: 0;
        }
      }

      .aside__outer-container {
        position: absolute;
        top: 0;
        width: 34%;
        max-width: none;
      }
    }

    .aside__inner-container {
      @media (min-width: $thousand) {
        padding: 0 9% 0 12%;
      }
    }

    .aside__highlighted-surface {
      background-color: $green;
      @include darkTheme {
        background-color: #1a1a1a;

        h3 {
          color: $darkerOrange;
        }
        .count {
          /* slightly more muffled than orange */
          color: #b33b30;
        }
      }

      padding: 2rem 2rem 13rem;
      @media (min-width: $mid) {
        padding: 16rem 2rem 13rem;
      }
      @media (min-width: 800px) and (max-width: $thousand) {
        padding: 1rem 2rem 13rem;
      }
      @media (min-width: $thousand) {
        padding: 31rem 2rem 13rem;
      }

      section {
        font-size: 2.4rem;
        font-weight: bold;
        margin: 2rem 0 4rem;
        line-height: 1;

        &.total-count {
          .count-container {
            display: flex;
            flex-direction: row;
            margin-bottom: 0.7rem;
          }
          .count-container__left {
            position: relative;
            width: 55%;
          }

          .count-container__right {
            font-weight: 700;
            font-size: 3.4rem;
            line-height: 0.7;
            width: 45%;
            hyphens: none;
            letter-spacing: -1px;
            padding: 1rem 0 0 0.5rem;
          }

          .count {
            position: absolute;
            right: 0;
            font-size: 9rem;
            line-height: 1em;
            font-weight: 900;
          }
        }

        &.commit-count {
          .commit-container {
            font-size: 8rem;
            line-height: 1em;
            font-weight: 900;
          }
          .commit-line-1,
          .commit-line-2 {
            font-size: 3.6rem;
          }
        }

        &.asserts-count {
          text-align: right;
          .asserts-container {
            font-size: 7rem;
            line-height: 1em;
            font-weight: 900;
          }
          .asserts-line-1 {
            text-align: center;
          }
          .asserts-line-2 {
            font-size: 4.2rem;
          }
        }
      }
    }
  }

  .content-row {
    position: relative;
    z-index: 30;
    margin-top: 4rem;

    @media (min-width: $thousand) {
      padding-left: 2rem;
    }
    p {
      margin-bottom: 2.1rem;
    }
  }

  @media (min-width: $mid) {
    .content-row__container {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      width: 100%;
    }

    .content-row__description {
      width: 50%;
      padding-right: 2rem;
    }
    .content-row__packages {
      width: 50%;
    }
  }

  @media (min-width: $thousand) {
    .content-row__description {
      padding-left: 2rem;
    }
    .content-row__description {
      width: 40%;
      padding-right: 0;
    }
    .inner-container,
    .back-to-top {
      padding-left: 2rem;
    }
  }

  .marker {
    position: relative;

    left: -7rem;
    top: -22rem;

    @media (min-width: $mid) {
      left: -7rem;
      top: -22rem;
    }
    @media (min-width: $thousand) {
      width: 100%;
      left: -2rem;
      top: -18rem;
    }
    @media (min-width: 1200px) {
      top: -22rem;
    }
