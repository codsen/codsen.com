/* hide permalink anchors on h1's */
h1,
h2,
h3,
h4,
h5,
h6 {
  position: relative;
  z-index: 1;
  .header-anchor {
    display: none;

    z-index: -1 !important;
    left: -0.3em;
    top: 0.2em;
    font-size: 2em;
    font-weight: 700;
    line-height: 0;
    color: $blue;
    @include darkTheme {
      color: $borderDark;
    }
  }

  .centered-headings & {
    /* &:after {
      content: "§";
      font-size: 2em;
      opacity: 0;
    } */

    position: relative;
    left: -0.7em;

    .header-anchor {
      opacity: 0;
      display: inline-block;
      position: relative !important;
      font-size: 2em;
      font-weight: 700;
      line-height: 0;
      z-index: -1 !important;
      left: 3rem;
      top: 0.1em;
      color: $blue;
      @include darkTheme {
        color: $borderDark;
      }
    }
  }

  &:hover {
    .header-anchor {
      display: block;
      position: absolute;
      background: transparent;

      &:hover {
        display: block;
        color: $yellow;
        background: transparent;
        @include darkTheme {
          color: $darkerRed;
          background: transparent;
        }
      }

      .centered-headings & {
        display: inline;
        position: relative !important;
        opacity: 1;
      }
    }
  }
}

/* disable anchors on h1 */
h1 {
  .header-anchor {
    display: none !important;
    &:hover {
      display: none !important;
    }
  }
  &:hover {
    .header-anchor {
      display: none !important;
    }
  }
}

