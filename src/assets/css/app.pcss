[data-whatintent="mouse"] *:focus,
[data-whatintent="mouse"] *:visited:focus {
  outline: none;
}

/* code highlighting */
/* -------------------------------------------------------------------------- */

/* https://github.com/PrismJS/prism-themes/blob/master/themes/prism-vsc-dark-plus.css */

pre[class*="language-"],
code[class*="language-"] {
  color: #d4d4d4;
  /* font-size: 13px; */
  text-shadow: none;
  /* font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace; */
  font-family: "Roboto Mono", monospace;
  direction: ltr;
  text-align: left;
  white-space: pre;
  word-spacing: normal;
  word-break: normal;
  line-height: 1.5;
  -moz-tab-size: 4;
  -o-tab-size: 4;
  tab-size: 4;
  hyphens: none;
}

pre[class*="language-"]::selection,
code[class*="language-"]::selection {
  text-shadow: none;
  background: #b3d4fc;
}

@media print {
  pre[class*="language-"],
  code[class*="language-"] {
    text-shadow: none;
  }
}

pre[class*="language-"] {
  overflow: auto;
  background: #1e1e1e;
}

:not(pre) > code[class*="language-"] {
  padding: 0.1em 0.3em;
  border-radius: 0.3em;
  color: #db4c69;
  background: #f9f2f4;
}

/* tokens */

.namespace {
  opacity: 0.7;
}

.token.comment {
  /* 48% - average between bg at 12% and default text at 83% */
  /* (83+12)/2 = 47.5 */
  color: #787878;
}

.token.prolog,
.token.doctype,
.token.cdata {
  color: #6a9955;
}

.token.punctuation {
  color: #d4d4d4;
}

.token.property,
.token.tag,
.token.boolean,
.token.number,
.token.constant,
.token.symbol,
.token.deleted {
  color: #b5cea8;
}

.token.selector,
.token.attr-name,
.token.string,
.token.char,
.token.builtin,
.token.inserted {
  color: #ce9178;
}

.token.operator,
.token.entity,
.token.url,
.language-css .token.string,
.style .token.string {
  color: #d4d4d4;
  background: #1e1e1e;
}

.token.atrule,
.token.attr-value,
.token.keyword {
  color: #c586c0;
}

.token.function {
  color: #dcdcaa;
}

.token.regex,
.token.important,
.token.variable {
  color: #d16969;
}

.token.important,
.token.bold {
  font-weight: bold;
}

.token.italic {
  font-style: italic;
}

.token.constant {
  color: #9cdcfe;
}

.token.class-name {
  color: #4ec9b0;
}

.token.parameter {
  color: #9cdcfe;
}

.token.interpolation {
  color: #9cdcfe;
}

.token.punctuation.interpolation-punctuation {
  color: #569cd6;
}

.token.boolean {
  color: #569cd6;
}

.token.property {
  color: #9cdcfe;
}

.token.selector {
  color: #d7ba7d;
}

.token.tag {
  color: #569cd6;
}

.token.attr-name {
  color: #9cdcfe;
}

.token.attr-value {
  color: #ce9178;
}

.token.entity {
  color: #4ec9b0;
  cursor: unset;
}

.token.namespace {
  color: #4ec9b0;
}

/* language-specific */

pre[class*="language-javascript"],
code[class*="language-javascript"] {
  color: #4ec9b0;
}

pre[class*="language-css"],
code[class*="language-css"] {
  color: #ce9178;
}

pre[class*="language-html"],
code[class*="language-html"] {
  color: #d4d4d4;
}

.language-html .token.punctuation {
  color: #808080;
}

/* line highlighting */

pre[data-line] {
  position: relative;
}

pre[class*="language-"] > code[class*="language-"] {
  position: relative;
  z-index: 1;
}

.line-highlight {
  position: absolute;
  left: 0;
  right: 0;
  padding: inherit 0;
  margin-top: 1em;
  background: #f7ebc6;
  box-shadow: inset 5px 0 0 #f7d87c;
  z-index: 0;
  pointer-events: none;
  line-height: inherit;
  white-space: pre;
}

/* sticker styling */
/* -------------------------------------------------------------------------- */

.separator {
  /* it's margin not padding because */
  /* h* intro paragraphs will come with their */
  /* own margins, which will overlap */

  /* padding wouldn't overlap */
  margin: 6rem 0;
  text-align: center;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;

  svg {
    margin: 0 1rem;
  }
}

.svg-outline {
  fill: $lighterGrey;
  @include darkTheme {
    fill: $lighterDark;
  }
}

.svg-yellow {
  fill: $yellow;
  @include darkTheme {
    fill: $darkYellow;
  }
}

.svg-green {
  fill: $green;
  @include darkTheme {
    fill: $darkOrange;
  }
}

.svg-blue {
  fill: $blue;
  @include darkTheme {
    fill: $darkRed;
  }
}

.svg-black-fill {
  fill: #121212;
}

.svg-black-stroke {
  stroke: #121212;
}

/* about page layout */
/* -------------------------------------------------------------------------- */

.page-about-container {
  text-align: center;
}
.page-about-container__avatar {
  margin-top: 8rem;
  img {
    border-radius: 50%;
  }
}
.page-about-container__contents {
  max-width: 50rem;
  margin: 0 auto;
  h1,
  hr {
    margin: 3.1rem 0;
  }
}

@media (min-width: $thousand) {
  .page-about-container {
    text-align: left;
    display: flex;
    flex-direction: row-reverse;
  }
  .page-about-container__avatar {
    width: 50%;
    padding: 0 4rem;
    margin-top: 1rem;
    text-align: right;
    img {
      width: 100%;
      max-width: 45rem;
      height: auto;
      border-radius: 1rem;
    }
  }
  .page-about-container__contents {
    width: 50%;
    max-width: none;
    padding: 0 4rem;
    h1 {
      padding-top: 0;
      margin-top: 0;
    }
  }
}

.page-about-container__content {
  p {
    text-align: left;
    margin-bottom: 3.1rem;
  }
}

/* /os/.../examples/ pages */
/* -------------------------------------------------------------------------- */

.page-examples {
  .package-nav {
    padding: 1rem;
  }

  h2 {
    max-width: none !important;
    text-align: center;
  }

  .code-wrapper {
    margin-bottom: -0.1rem;
  }
}

.examples-actions {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;

  font-size: 1.4rem;
  line-height: 1.2;

  a {
    display: inline-block;
    line-height: inherit;
    &:hover {
      text-decoration: none;
    }
    @include darkTheme {
      &:hover {
        text-decoration: none;
      }
    }
  }
}

.large-slash {
  color: $lighterGrey;
  @include darkTheme {
    color: $lighterDark;
  }

  font-size: 2em;
  font-weight: 900;
  line-height: 0;
  display: inline-block;
  padding: 0 0.3rem;
}

.centered-headings {
  h1 {
    padding: 0 !important;
    margin: 4rem 1rem 8rem !important;
    left: 0;

    &:after {
      display: none;
    }
  }

  h2 {
    max-width: none !important;
    text-align: center;
  }
}

/* Articles List page */
/* -------------------------------------------------------------------------- */

.page-articles-list {
  .list-container {
    margin-top: 8rem;
  }

  figure {
    text-align: center;
    @media (min-width: $mid) {
      float: left;
      margin: 0 2rem 0 0;
      text-align: left;
    }
    a {
      display: inline-block;
      height: 6rem;
      width: 12rem;
      &:hover {
        background: none;
      }
      @include darkTheme {
        &:hover {
          background: none;
        }
      }
    }
    img {
      height: 6rem;
      width: 12rem;
    }
  }

  li {
    padding-bottom: 2rem;
    border-bottom: 1px dashed $borderGrey;
    @include darkTheme {
      border-bottom-color: $borderDark;
    }

    margin-bottom: 2rem;
    @media (min-width: $mid) {
      margin-bottom: 3rem;
    }

    &:last-child {
      border-bottom: none;
      margin-bottom: 0;
    }

    article {
      padding: 0;

      @media (min-width: $mid) {
        display: flex;
        flex-direction: row;

        .article-contents-container {
          flex: 1;
        }
      }
    }
  }
}

/* etc */
/* -------------------------------------------------------------------------- */

/* add scrollbars to tables if needed */
.tables-wrapper {
  overflow-x: auto;
}

