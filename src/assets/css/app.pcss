.mono {
  font-family: monospace;
}

.skiplink-fn {
  position: absolute;
  height: 1px;
  width: 1px;
  clip: rect(1px 1px 1px 1px);
  overflow: hidden;
  white-space: nowrap;

  &:focus {
    /* resets first */
    position: absolute;
    height: auto;
    width: auto;
    clip: auto;
    overflow: visible;
    white-space: normal;

    /* then extra styling */
    display: block;
    padding: 2rem;
    background-color: $green;
    left: 0;
    top: 0;
  }
}

p code,
ul code,
li code,
td code,
th code,
.package-description code {
  padding: 0.3rem 0.6rem;
  /* display: inline-block; */
  padding: 0.2rem 0.5rem;
  position: relative;
  top: -0.1rem;
  line-height: 1.3;

  background-color: $lighterGrey;
  border: $border;

  .package-install & {
    border-color: $textBright;
  }

  @include darkTheme {
    background-color: $borderDark;
    border: none;
  }

  .package-notice & {
    /* lighterGrey overlay over green */
    background-color: #c6ffff;
    border-color: #acffee;

    @include darkTheme {
      /* borderDark overlay over darkerOrange */
      background-color: #955646;
      border-color: #955646;
    }
  }
}

/* sometimes whole code value is a link */
a {
  & > code {
    background-color: transparent;
    border: 1px solid $textBright;
    text-decoration: inherit;
  }
  @include darkTheme {
    &:hover > code {
      background-color: transparent;
      text-decoration: none;
    }
  }
}

/* examples list - <code> within <a> */
li a {
  code {
    border: 1px solid $borderGrey;
    @include darkTheme {
      border: none;
    }
  }
  &:hover code {
    border-color: $textBright;
  }
}

kbd {
  padding: 0.3rem 0.6rem;
  /* a rare exception where border is not grey */
  border: 1px solid $textBright;
  @include darkTheme {
    border-color: $textDark;
  }
}

kbd {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 0.5rem;
}

.no-underline {
  text-decoration: none;
}

.dib {
  display: inline-block;
}

.ptb10 {
  padding: 1rem 0;
}

.ptb20 {
  padding: 2rem 0;
}

.h-narrowColumns {
  @include narrowColumns {
    display: none;
  }
}

/* posts list is always <ol> */
.posts {
  list-style: none;
  padding: 0;
  margin: 0;
}

/* placeholder colours: */
.turquoise {
  background-color: turquoise;
}

.coral {
  background-color: coral;
}

.khaki {
  background-color: khaki;
}

.ext-link {
  position: relative;
  top: -1rem;
  margin-left: -0.3rem;
  cursor: help;
}
.button .ext-link path {
  stroke: #000;
}

blockquote {
  quotes: "\201C""\201D""\2018""\2019";
  font-style: italic;
  border-left: 1rem solid $yellow;
  @include darkTheme {
    border-left-color: $darkerOrange;
  }
  padding-left: 2rem;
}

.show-dark-only {
  display: none;
  @include darkTheme {
    display: block;
    &:hover {
      opacity: 0.75;
    }
  }
}

.show-light-only {
  display: block;
  &:hover {
    filter: brightness(90%);
    -webkit-filter: brightness(90%);
  }
  @include darkTheme {
    display: none;
  }
}

/* body */
/* -------------------------------------------------------------------------- */

body {
  color: $textBright;
  @include darkTheme {
    color: $textDark;
    strong {
      /* 60% - by 10% brighter than $textDark which is at 50% */
      color: #999791;
    }
  }

  &[data-menu-expanded="true"] {
    position: fixed;
  }

  & > .container {
    display: flex;
    flex-direction: column;
  }
}

main {
  padding: 0 1rem 1rem;
  display: flex;
  flex: 1;
  min-height: 30rem;
  @media (min-width: $narrow) {
    min-height: 50rem;
  }
  @media (min-width: $thousand) {
    min-height: 60rem;
  }
  flex-direction: column;
}

footer {
  display: flex;
  padding: 2.6rem 1rem 1rem;
  flex-direction: column;
  font-size: 1.6rem;

  & > hr {
    display: none;
  }

  @media (min-width: $mid) {
    section {
      padding: 0 1rem 1rem !important;
    }
  }

  a {
    text-decoration: underline;
    &:hover {
      background-color: $blue;
      text-decoration: none;
      path {
        stroke: $black;
      }
      @include darkTheme {
        color: $black;
        background-color: $darkRed;
      }
    }
  }
}

main a,
main .open-source-container h3 {
  @include underline($green);
  &:hover {
    text-decoration: none;
    background-color: $blue;
    path {
      stroke: $black;
    }
  }
  @include darkTheme {
    @include underline($darkOrange);
    color: $darkerGrey;
    &:hover {
      color: $black;
      background-color: $darkRed;
    }
  }
}

body > .container,
footer {
  width: 100%;
  max-width: $max;
  margin: 0 auto;
}

.layout-list {
  /* important - it's flex for two column layouts in "articles/" */
  .content-main__inner {
    display: flex;
    flex-direction: column;
    @media (min-width: $mid) {
      flex-direction: row;
    }

    & > article {
      margin-left: auto;
      margin-right: auto;
    }
  }
}

/* unstack the columns later on tag pages */
.layout-page-tag-single {
  display: flex;
  flex-direction: column;
  @media (min-width: 900px) {
    flex-direction: row;

    & > section {
      width: 50%;
      margin-top: 2rem;
    }
    & > .head {
      max-width: 60%;
      min-width: 50%;
      padding-right: 4rem;
    }
  }

  h1 {
    margin-bottom: 0.8rem;
  }
}

.layout-page-tag-all .content-main__inner {
  ul {
    margin-top: 4rem;
    list-style: none;
  }
}

/* open source homepage has a custom layout, at this level not
based on flex */
.layout-page-open-source .content-main__inner {
  display: block;
}
/* see whole chapter for ".layout-page-open-source" way below */

.content-main__search-contents {
  display: none;
}

[data-menu-expanded="true"] {
  main,
  footer {
    display: none;
  }
}

[data-search-expanded="true"] {
  main .content-main__inner {
    /* we use visibility instead of display:none to keep scrollbars in place */
    visibility: hidden;
  }

  .content-main__search-contents {
    display: block;
  }

  body > .container > hr {
    display: none;
  }
}

hr {
  border: 0;
  height: 1px;
  margin: 0 2rem;
  position: relative;
  z-index: 5;
  /* TODO - set opacity properly to match border */
  opacity: 0.15;
  background-color: #000;
  @include darkTheme {
    /* TODO - set opacity properly to match border */
    opacity: 0.15;
    background-color: #fff;
  }
}

footer {
  h3 {
    font-size: 2.2rem;
    font-weight: 900;
    font-style: italic;
    line-height: 1.2;
    letter-spacing: normal;
    padding: 1.6rem 0 0;
    margin: 0 0 0.7rem;
    color: $emphasisGrey;
    @include darkTheme {
      color: $textDark;
    }
  }

  p {
    font-size: 1.6rem;
    line-height: 1.5;
    margin-bottom: 1.6rem;
  }
}

/* header */
/* -------------------------------------------------------------------------- */

.site-header {
  text-align: center;
  position: relative;
  z-index: 5;
}

.site-branding {
  display: inline-block;
  position: relative;
  a {
    text-decoration: none;
    color: inherit;
  }
}

.site-branding__logo {
  display: inline-block;
  padding: 0 0 0 2rem;
  svg {
    width: 18rem;
  }
  &:hover {
    opacity: 0.75;
  }
}

@include on-hover {
  span.tm {
    animation: roll 0.5s;
    transform: rotate();
  }
}

.menu-toggle,
.search-toggle {
  width: 4rem;
  height: 4rem;
  background: transparent;
  border: none;

  .icon-search path,
  .icon-close path,
  .icon-burger path {
    fill: $textBright !important;
    @include darkTheme {
      fill: $textDark !important;
    }
  }

  @include on-hover {
    background: $green;
    @include darkTheme {
      background: $darkOrange;
      .icon-search path,
      .icon-close path,
      .icon-burger path {
        fill: $surfaceDark !important;
      }
    }
  }
}

nav {
  line-height: 6rem;
  width: 100%;

  @media (min-width: $narrow) {
    display: inline-block;
    ul {
      list-style-type: none;
      margin: 0 auto;
      padding: 0;
      li {
        a {
          color: inherit;
          padding: 1.6rem;
          text-decoration: none;
        }
      }
    }
  }
}

.menu-toggle .icon-close {
  display: none;

  [data-menu-expanded="true"] & {
    display: inline;
  }
}

.menu-toggle .icon-burger {
  display: inline;

  [data-menu-expanded="true"] & {
    display: none;
  }
}

.search-toggle .icon-close {
  display: none;

  [data-search-expanded="true"] & {
    display: inline;
  }
}

.search-toggle .icon-search {
  display: inline;

  [data-search-expanded="true"] & {
    display: none;
  }
}

.menu-container {
  display: none;
  font-style: italic;
  [data-menu-expanded="true"] & {
    display: block;

    ul {
      list-style-type: none;
      margin: 0;
      padding: 1rem 0;
      overflow: hidden;

      li {
        text-align: center;
        a {
          /* display: block; */
          color: inherit;
          text-align: center;
          text-decoration: none;
          /* line-height: 4.4rem !important; */
          line-height: 100%;
        }
      }
    }
  }

  @media (min-width: $narrow) {
    display: flex;

    ul,
    [data-menu-expanded="true"] & ul {
      display: flex;
      border-top: none !important;
      li {
        display: inline-block;
        border-bottom: none !important;
        a {
          padding: 0 1.6rem;
          line-height: 1;
        }
      }
    }

    .menu-item a {
      padding: 1.6rem;
    }

    .menu-item-home,
    .menu-item-contacts {
      display: none;
    }
  }
}

/* don't display the content on the page when menu is expanded on mobile */
[data-menu-expanded="true"] .content-main {
  display: none;
  @media (min-width: $narrow) {
    display: block;
  }
}

/* dark toggle active buttons */
[data-theme="light"] {
  .icon-light path {
    fill: $blue;
  }
  .icon-light-rays {
    stroke: $blue;
  }
}

[data-theme="auto"] .icon-auto,
[data-theme="dark"] .icon-dark {
  path {
    fill: $darkOrange !important;
  }
  .icon-auto-letters {
    fill: $surfaceDark !important;
  }
}

@media (prefers-color-scheme: light) {
  [data-theme="auto"] {
    .icon-auto path {
      fill: $blue !important;
    }
  }
}

.dark-mode-toggle-container {
  display: none;
  position: relative;
  [data-target="theme-switcher.auto"] {
    margin-right: 0.5rem;
  }
  svg {
    width: 3rem;
    &:hover {
      /* light theme: */
      fill: $green;
      path {
        fill: $green;
      }
      .icon-auto-letters {
        fill: $white;
      }
      .icon-light-rays {
        stroke: $green;
      }
    }

    /* dark theme: */
    @include darkTheme {
      fill: $textDark;
      .icon-auto-letters,
      path {
        fill: $textDark;
      }
      .icon-light-rays {
        stroke: $textDark;
      }
      .icon-auto-letters {
        fill: $surfaceDark;
      }
    }

    &:hover {
      @include darkTheme {
        fill: $darkYellow;
        .icon-auto-letters,
        path {
          fill: $darkYellow;
        }
        .icon-light-rays {
          stroke: $darkYellow;
        }
        .icon-auto-letters {
          fill: $surfaceDark;
        }
      }
    }
  }

  [data-menu-expanded="true"] & {
    display: block;
    padding: 0 2rem;
    text-align: left;
    border-top: $border;
    @include darkTheme {
      border-top-color: $borderDark !important;
    }
  }

  @media (min-width: $narrow) {
    display: inline;
    position: absolute;
    top: 0.8rem;
    left: 2.7rem;
    /* padding: 0 1.6rem; IF YOU CHANGE THIS, CHANGE IN OTHER PLACE */
  }
}

#search-form {
  display: none;

  [data-search-expanded="true"] & {
    display: flex;
    clear: both;
    text-align: left;
    margin: 0 1rem;
    flex-direction: column;
    margin: 2rem;

    @media (min-width: $narrow) {
      margin: 0 2rem;
      flex-direction: row;
    }
  }
}

.search-heading {
  line-height: 1.5;
  display: inline-block;
  position: relative; /* needed to position sup */
}

/* search button */
.search-submit {
  padding: 0.2rem 1rem;
  font-size: 1.8rem !important;
  box-shadow: none;
}

/* NAV BUTTON HOVERS */
.menu-item a {
  color: $textBright;
  &:hover {
    span {
      @include thickUnderline($green);
      @include darkTheme {
        @include thickUnderline($darkOrange);
      }
    }
  }
  @include darkTheme {
    color: $darkWhite;
  }
}
a[aria-current="page"] {
  span {
    @include thickUnderline($yellow);
    @include darkTheme {
      @include thickUnderline($darkYellow);
    }
  }
}

.site-header {
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: space-between;
  position: relative; /* used for dark/search positioning */

  .site-branding {
    align-self: flex-start;
  }

  .search-toggle,
  .menu-toggle {
    position: absolute;
    top: 1rem;
    width: 4.4rem;
  }
  .search-toggle {
    right: 5rem;
  }

  .menu-toggle {
    right: 1rem;
  }
}

[data-menu-expanded="true"] {
  .site-header {
    flex: 1;
  }

  nav {
    overflow-y: scroll;
    flex-grow: 99;
    display: flex;
    flex-direction: column;
    align-content: space-between;

    border-top: $border;

    ul {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-content: space-between;
      align-items: stretch;
      flex: 1;

      li {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;

        a {
          width: 100%;
          height: 100%;
          display: flex;
          justify-content: center;
          align-items: center;
        }
      }
    }
  }

  .menu-container {
    flex: 1;
    display: flex;
  }
}

/* set the borders around nav on mobile */
@media (prefers-color-scheme: dark) {
  :root[data-menu-expanded="true"]:not([data-theme="light"]) & {
    nav {
      border-top-color: $borderDark;
    }
    .dark-mode-toggle-container {
      border-top-color: $borderDark;
    }
  }
}
:root[data-theme="dark"][data-menu-expanded="true"] {
  nav {
    border-top-color: $borderDark;
  }
  .dark-mode-toggle-container {
    border-top-color: $borderDark;
  }
}

/* logo in dark */
/* ====================== */

.site-branding {
  @include darkTheme {
    /* codsen logo */
    #underline-base,
    #underline-spot1,
    #underline-spot2 {
      fill: $darkRed !important;
    }
    #letter-c,
    #letter-o,
    #letter-d,
    #letter-s,
    #letter-e,
    #letter-n {
      fill: $darkWhite !important;
    }

    /* roundel */
    #roundel-surface {
      fill: $darkYellow !important;
    }
    .roundel-spot {
      fill: $darkYellow !important;
    }
    .roundel-letter {
      fill: $surfaceDark !important;
    }
  }
}

h1,
h2,
h3,
h4,
h5,
h6,
svg {
  a {
    text-decoration: none;
  }
  @include darkTheme {
    a {
      text-decoration: none;
    }
  }
  code {
    border: 1px solid #333;
    border-radius: 2rem;
    padding: 0.05em 0.2em;
  }
}

/* NARROW/425 media */
/* -------------------------------------------------------------------------- */

@media (min-width: $narrow) {
  .menu-toggle {
    display: none;
  }
  .site-header {
    .search-toggle {
      right: 1.2rem;
    }
    .site-branding {
      align-self: auto;
      padding-left: 4rem;
    }
  }

  .container > main {
    padding: 0 2rem 2rem;
  }

  /* clean up if menu toggle is enabled on narrow width and window is widened
  to desktop width */

  [data-menu-expanded="true"] body {
    position: static;
    width: 100%;
    height: auto;

    .dark-mode-toggle-container {
      border-top: none;
      /* padding: 0 1.6rem; IF YOU CHANGE THIS, CHANGE IN OTHER PLACE */
    }

    nav {
      overflow-y: auto;
      flex-grow: 0;
      display: inline-block;
      flex-direction: row;
      align-content: normal;

      border-top: none;
      @include darkTheme {
        border-top: none;
      }

      ul {
        width: auto;
        height: auto;
        display: block;
        flex-direction: row;
        align-content: normal;
        justify-content: center;
        align-items: normal;
        padding: 0 !important;
        margin: 0 auto !important;

        li {
          height: auto;
          display: inline-block;
          align-items: normal;
          justify-content: normal;
          width: auto;

          a {
            display: inline;
            width: auto;
            height: auto;
            justify-content: normal;
            align-items: normal;
          }
        }
      }
    }

    .menu-container {
      display: flex;
    }

    footer,
    main {
      display: block;
    }
  }
}

/* MID/550 media */
/* -------------------------------------------------------------------------- */

/* reveal Home/Contacts later, at 700px */
@media (min-width: 700px) {
  .menu-item-home,
  .menu-item-contacts {
    display: inline-block !important;
  }
}

@media (min-width: $mid) {
  .site-branding__logo {
    padding-left: 4rem;
    svg {
      width: auto;
    }
  }

  .site-branding__roundel {
    top: 0;
    width: 7rem;
  }

  .site-header {
    padding-top: 2rem;
  }

  footer {
    flex-direction: row;
    section {
      padding: 1rem 3rem 1rem 1rem;
      flex: 1;
      p {
        max-width: 45rem;
      }
    }
  }
}

/* search */
/* -------------------------------------------------------------------------- */

[data-search-expanded="true"] #search-form {
  display: flex;
  margin-top: 1rem;
  margin-bottom: 1rem;

  label {
    display: flex;
    align-items: center;
    flex: 1;
    position: relative;

    .icon-search {
      display: none;
      @media (min-width: $mid) {
        display: inherit;
        margin-left: 2rem;
        fill: $green;
        position: absolute;
        left: 0;
      }
    }
    input[type="search"] {
      flex: 1;
      border: 2px dashed $textBright;

      padding: 1rem 2rem;
      margin-bottom: 2rem;
      @media (min-width: $mid) {
        /* icon appears */
        margin: 0;
        padding: 1rem 2rem 1rem 6rem;
      }
      margin-right: 1rem;
    }
  }

  input[type="submit"] {
    flex: 0;
  }
}

/* automatic dark theme */
@media (prefers-color-scheme: dark) {
  [data-search-expanded="true"][data-theme="dark"],
  [data-search-expanded="true"][data-theme="auto"] {
    #search-form {
      .icon-search {
        fill: $darkYellow;
      }

      input[type="search"] {
        color: $textDark;
        background: transparent;
        border: 0.2rem dashed $textDark;
      }
    }
  }
}

/* manually enabled dark theme */
[data-search-expanded="true"][data-theme="dark"] {
  #search-form {
    .icon-search {
      fill: $darkYellow;
    }

    input[type="search"] {
      color: $textDark;
      background: transparent;
      border: 0.2rem dashed $textDark;
    }
  }
}

.search-field {
  font-size: 2rem;
}

/* home page */
/* -------------------------------------------------------------------------- */

.icon-link path {
  @include darkTheme {
    fill: $textDark;
  }
}

/* ██ 1-col layout ██ */

/* default, mobile layout is 1-column, with news on top, then articles, then no
open source at all. */
.col-outer {
  display: flex;
  flex-direction: column;
  .col1 {
    order: 2;
  }
  .col2 {
    display: none;
  }
  .col3 {
    order: 1;
  }
  .col3-clone {
    display: none;
  }

  & > hr {
    display: none;
  }
}

/* ██ 2-col layout ██ */

@media (min-width: $mid) {
  .col-outer {
    display: table;
    border-collapse: collapse;
    width: 100%;
    .col3 {
      display: none;
    }
    .col1,
    .col2 {
      display: table-cell;
      width: 50%;
      padding: 0;
      border: $border;
      @include darkTheme {
        border-color: $borderDark;
      }
      vertical-align: top;
    }
    .col3-clone {
      display: block;
    }
  }
}

/* ██ 3-col layout ██ */

@media (min-width: $thousand) {
  .col-outer {
    display: table;
    border-collapse: collapse;
    width: 100%;
    .col1,
    .col2,
    .col3 {
      display: table-cell;
      width: 33.33%;
      padding: 0;
      border: $border;
      @include darkTheme {
        border-color: $borderDark;
      }
      vertical-align: top;
    }
    .col3-clone {
      display: none;
    }
  }
}

.entries {
  & > h2,
  & > a > h2,
  .col3-clone > h2 {
    font-size: 2.2rem;
    font-weight: 900;
    font-style: italic;
    line-height: 1.2;
    padding: 1rem;
    @media (min-width: $thousand) {
      padding: 1rem 2rem;
    }
    letter-spacing: normal;

    margin: 0;
    background-color: $borderGrey;
    @include darkTheme {
      background-color: $borderDark;
    }

    &.inset {
      margin: 1rem;
      padding: 1rem;
      background-color: #333;
      color: #fff;
      @include darkTheme {
        background-color: $textDark;
        color: #333;
      }
    }
  }

  & > a:hover h2 span {
    background-color: $blue;
    color: $black;
    text-decoration: none;
    @include darkTheme {
      background-color: $darkOrange;
    }
  }

  article {
    a h3 {
      color: $textBright;
      @include darkTheme {
        color: $darkerGrey;
      }
    }

    h3 {
      font-size: 2.4rem;
      line-height: 1.3;
      margin: 1rem 0;
    }

    p {
      font-size: 1.8rem;
      line-height: 2.7rem;
      margin-bottom: 1rem;
    }
  }
}

.entries article,
.layout-list article {
  border-bottom: 1px dashed $borderGrey;
  @include darkTheme {
    border-bottom-color: $borderDark;
  }

  padding: 2rem 0;
  @media (min-width: $mid) {
    padding: 2rem 1rem;
  }
  @media (min-width: $thousand) {
    padding: 2rem 2rem 1.5rem;
  }

  /* h3 a:hover {
    color: $blue;
    @include darkTheme {
      color: $darkRed;
    }
  } */

  .permalink {
    display: none;
  }

  header {
    font-size: 1.6rem;
    line-height: 1.2;
    padding-bottom: 1rem;
    @media (min-width: $thousand) {
      padding-bottom: 1.5rem;
    }

    /* .article-publication-meta */
    color: $textBright;
    time {
      color: $darkerGrey;
    }

    @include darkTheme {
      color: $darkRed;
      time {
        color: $textDark;
      }
    }
    font-weight: bold;
    time {
      display: inline-block;
      font-weight: normal;
    }

    a:hover {
      color: $blue;
    }
  }

  img {
    display: block;
    width: 100%;
    &:hover {
      opacity: 0.75;
    }
  }
}

.layout-list {
  h1,
  .two-thirds > * {
    @media (min-width: $mid) {
      padding-left: 1rem;
    }
    @media (min-width: $thousand) {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }

  .two-thirds > div.mb {
    margin-bottom: 2rem;
  }

  article {
    @media (min-width: $thousand) {
      padding: 4rem 8rem 4rem 0;
    }
  }
}

.tags {
  margin-top: 1.2rem;
}

/* beware code highlighting also uses .tag */
.tags a,
.entries .tag,
.entry-tags .tag {
  border-radius: 99rem;
  padding: 1.2rem 1rem;
  font-size: 1.4rem;
  color: $emphasisGrey;
  display: inline-block;
  margin-right: 0.8rem;
  margin-bottom: 0.5rem;

  text-decoration: none;
  @include darkTheme {
    text-decoration: none !important;
  }

  background-color: $lighterGrey;
  &[aria-current="tag"] {
    background-color: $yellow;
    color: $textBright;
  }
  &:hover {
    background-color: $blue;
    color: $textBright;
    text-decoration: none;
  }
  @include darkTheme {
    background-color: $borderDark;
    color: $textDark;
    &[aria-current="tag"] {
      color: $black;
      background-color: $darkYellow !important;
      text-decoration: none;
    }
    &:hover {
      color: $black;
      background-color: $darkRed !important;
      text-decoration: none;
    }
  }

  .entries & {
    /* on homepage, dark hovers are yellow */
    @include darkTheme {
      &:hover {
        background-color: $darkYellow !important;
      }
    }
  }
}

.open-source-container {
  & > div {
    position: relative;

    border-bottom: 1px dashed $borderGrey;
    @include darkTheme {
      border-bottom-color: $borderDark;
    }
  }
  .open-source-title:hover {
    text-decoration: none !important;
    h3 {
      @include darkTheme {
        color: inherit;
      }
    }
  }
  a {
    text-decoration: none;
    &.open-source-title:hover {
      background: transparent;
    }
  }
  @include darkTheme {
    a {
      text-decoration: none;
      &.open-source-title:hover {
        color: $darkerGrey;
        background: transparent;
        text-decoration: none !important;
      }
    }
  }
  h3 {
    font-size: 1.8rem;
    line-height: 2.7rem;
    margin: 0;
    margin-bottom: 1rem;
    display: inline-block;
    z-index: 3;
    &:hover {
      color: $black;
      @include darkTheme {
        color: $black !important;
      }
      text-decoration: none !important;
    }
  }
  p {
    font-size: 1.4rem;
    line-height: 1.8rem;
    margin-bottom: 1rem;
    z-index: 3;
  }
  .button {
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    font-size: 1.4rem;
    z-index: 3;
  }
  .open-source-container__detergent {
    .ext-link {
      display: none;
    }
    &:before {
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      top: 5rem;
      left: -3%;
      z-index: 1;

      background-size: contain;
      background-repeat: no-repeat;
      background-image: url("http://localhost:8080/images/detergent_218x416_transp.png");
      background-position: right;
      transform: rotate(-20deg);

      opacity: 0.6;
      @include darkTheme {
        opacity: 1;
      }
    }

    h3,
    p {
      margin-left: 2rem;
    }
    h3 {
      margin-top: 3rem;
    }
    p {
      margin-right: 36%;
    }
    .button {
      margin-right: 15%;
    }
  }
  .open-source-container__comb {
    &:before {
      content: "";
      position: absolute;
      width: 70%;
      height: 100%;
      top: -21%;
      left: 3%;
      z-index: 1;

      background-size: contain;
      background-repeat: no-repeat;
      background-image: url("http://localhost:8080/images/comb_446x168_transp.png");
      background-position: right;

      opacity: 0.6;
      @include darkTheme {
        filter: brightness(160%);
        opacity: 1;
      }
    }

    h3 {
      margin-left: 55%;
      margin-top: 8rem;
    }
    p {
      margin: 0 2rem 2rem;
    }
    .button {
      float: left;
      margin: 2rem 2rem 2rem 0;
    }
  }
  .open-source-container__crush {
    &:before {
      content: "";
      position: absolute;
      width: 70%;
      height: 100%;
      top: -25%;
      left: 25%;
      z-index: 1;

      background-size: contain;
      background-repeat: no-repeat;
      background-image: url("http://localhost:8080/images/crush_482x164_transp.png");
      background-position: right;

      opacity: 0.6;
      @include darkTheme {
        filter: brightness(160%);
        opacity: 1;
      }
    }

    h3 {
      margin-top: 4rem;
      margin-left: 2rem;
    }
    p {
      margin: 0 2rem 2rem;
    }
    .button {
      float: right;
      margin: 2rem 0 3rem 2rem;
    }
  }
  .open-source-container__strip {
    h3 {
      margin: 2rem 2rem 1rem;
    }
    p {
      margin: 0 2rem 1.5rem;
    }
  }
}

/* now/news column on the homepage */

.news-about {
  font-size: 1.6rem;
  position: relative;
  & > p {
    line-height: 1.2;
    position: absolute;
    top: 0;
    padding: 14% 22%;
    @include narrowColumns {
      padding: 12% 16%;
      font-size: 1.2rem;
    }
    @media (max-width: 360px) {
      font-size: 1.2rem;
      padding: 12% 16%;
    }
  }
  & > svg {
    width: 100%;
    @include darkTheme {
      .bg {
        fill: hsla(0, 0%, 20%, 1);
      }
      .body-fill,
      .body-parts-ahem {
        fill: hsla(0, 0%, 40%, 1);
      }
      .black-lines,
      .body-parts-ahem {
        stroke: $surfaceDark;
      }
      .hair {
        fill: $surfaceDark;
      }
      .small-cloud,
      .large-cloud {
        stroke: hsla(0, 0%, 40%, 1);
      }
    }
  }
}

.news-contents {
  position: relative;
  &:after {
    content: "";
    position: absolute;
    z-index: 100;
    bottom: 0;
    left: 0;
    pointer-events: none;
    background-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(255, 255, 255, 1) 95%
    );
    @include darkTheme {
      background-image: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0) 0%,
        rgba(18, 18, 18, 1) 95%
      );
    }
    width: 100%;
    height: 100%;
  }

  .news-extras {
    display: none;
  }
  @media (min-width: $thousand) {
    .news-extras {
      display: block;
    }
  }
}

.now-entry-container {
  @media (min-width: $mid) {
    padding: 0 1rem;
  }
  @media (min-width: $thousand) {
    padding: 0 2rem;
  }

  time {
    font-size: 1.6rem;
    line-height: 1;
    color: $darkerGrey;
    @include darkTheme {
      color: inherit;
    }
    display: inline-block;
  }
  p {
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    border-bottom: 1px dashed $borderGrey;
    @include darkTheme {
      color: $darkerOrange;
      border-bottom-color: $borderDark;
    }
  }
}

/* contacts page */
/* -------------------------------------------------------------------------- */

.page-contacts {
  display: flex;
  flex-direction: column;
  height: 100%;

  .content-main__inner {
    display: flex;
    flex-direction: column;
    height: 100%;
    flex: 1;

    h1 {
      margin-bottom: 4rem;
      flex: 0;
    }
    .contacts-contents {
      flex: 1;
      display: flex;
      justify-content: center;
      flex-direction: column;
      text-align: center;
    }
    text-align: center;
    a {
      line-height: 1;
      margin-top: 4rem;

      font-size: 3rem;
      @media (min-width: $mid) {
        font-size: 6rem;
      }

      &:hover {
        text-decoration: none;
      }
    }
    img {
      @include darkTheme {
        filter: brightness(0.14) grayscale(1);
      }
    }
  }
}

/* 404 */
/* -------------------------------------------------------------------------- */

.page-four-oh-four {
  display: flex;
  flex-direction: column;
  height: 100%;

  .content-main__inner,
  .totally-centered {
    display: flex;
    flex-direction: column;
    height: 100%;
    flex: 1;
  }
}

/* articles homepage */
/* -------------------------------------------------------------------------- */

.layout-list article {
  &:last-child {
    border-bottom: none;
    @include darkTheme {
      border-bottom: none;
    }
  }

  & > figure {
    max-width: 40rem;
    /* margin: 0 auto; */
  }

  & > h3 {
    margin: 2rem 0;
  }
}

.pagination {
  padding: 2rem 0 !important;
  position: relative;

  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;

  ol {
    list-style: none;
    padding: 0;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;

    li {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: space-between;
      align-items: center;
    }
  }

  & .arrow_left,
  .arrow_right {
    position: absolute !important;
  }
}

.arrow_left {
  padding: 3rem 4.1rem;
}

.arrow_right {
  padding: 3rem 4.6rem;
}

.arrow_left,
.arrow_right {
  z-index: 10;
  line-height: normal;
  background-color: $lighterGrey;
  display: inline-block;
  /* width: 13.5rem;
  height: 8.2rem; */
  text-align: center;
  &:hover {
    background-color: $blue;
    color: $textBright;
    text-decoration: none;
  }

  @include darkTheme {
    background-color: $black;
    text-decoration: none;

    &:hover {
      color: $black;
      background-color: $darkRed;
      text-decoration: none;
    }
  }

  text-decoration: none;
  @include darkTheme {
    text-decoration: none;
  }
}

