/* VARIABLES */
/* -------------------------------------------------------------------------- */

/* breakpoints for media queries */

$narrow: 425px;
$mid: 550px;
$thousand: 1000px;
$wide: 1200px;
$max: 1280px;

/*
other commonly used break points:
640px
768px
1024px
1280px
*/

/* colours */

$orange: #ff552d;
$orange-light: #d16c57;
$yellow: #ffff65;
$blue: #08f0fd;
$green: #63ffbd;
$green-dark: #78cca9;

/* bright theme */

$white: #fff; /* 100% */
$lighterGrey: #f2f2f2; /* 95% */
$borderGrey: #dedede; /* 87% */
$darkerGrey: #ababab; /* 67% */
$emphasisGrey: #949494; /* 58% - brightest grey for text to pass as AA+ */
/* ========== */
$linkVisitedBright: #551a8b; /* 55%, violet */
$textBright: #17131f; /* 12%, violet tint */

/* dark theme */

$black: #000; /* 0% */
$surfaceDark: #121212; /* 7% */
$lighterDark: #1f1f1f; /* 12% */
$borderDark: #2b2b2b; /* 17% */
$textDark: #807e79; /* 50% */
$twentyFive: #404040; /* 25% */

$goldenBright: #deb138; /* 87% */
$goldenDark: #8e693d; /* 56% */

$darkWhite: #bab3a4; /* 73% */
$darkYellow: #d98d45; /* 85% */
$darkerYellow: #804b22; /* 50% */
$darkOrange: #cc5335; /* 80% */
$darkerOrange: #803421; /* 50% */
$darkRed: #b33b30; /* 55% */
$darkerRed: #802a22; /* 50% */
$darkGreen: #569939; /* 60 */

/* other */

$border: 1px solid $borderGrey;

-webkit-font-smoothing: antialiased;
-moz-osx-font-smoothing: grayscale;

/* TYPOGRAPHY */
/* -------------------------------------------------------------------------- */

/* homebrewn resets */

*,
*::after,
*::before {
  box-sizing: border-box;
}

a {
  text-decoration: none;
  color: inherit;
  cursor: pointer;
}

button {
  background-color: transparent;
  color: inherit;
  border-width: 0;
  padding: 0;
  cursor: pointer;
}

figure {
  margin: 0;
}

input::-moz-focus-inner {
  border: 0;
  padding: 0;
  margin: 0;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 0;
  font-size: inherit;
  font-weight: inherit;
}

p {
  margin: 0;
}

cite {
  /* font-style: normal; */
  display: block;
  &:before {
    content: "—";
  }
}

fieldset {
  border-width: 0;
  padding: 0;
  margin: 0;
}

/* https://www.gridlover.net/try */
/* ------------------------------------------------------------- */

html {
  font-size: 62.5%; /* 1rem = 10px */
  font-family: "Inter", sans-serif;
  scroll-behavior: smooth;
}
@media screen and (prefers-reduced-motion: reduce) {
  html {
    scroll-behavior: auto;
  }
}

body {
  font-size: 1.8rem;
  line-height: 3.1rem;
}

h1,
.h1 {
  letter-spacing: -0.05em;
  font-weight: 700;

  font-size: 5.82rem; /* 0.6x */
  line-height: 1;
  margin-top: 3.9rem;
  margin-bottom: 7.8rem;
  hyphens: none;

  @media (min-width: $mid) {
    font-size: 7.275rem; /* 0.75x */
  }
  @media (min-width: $thousand) {
    font-size: 9.7rem;
  }

  .layout-page &,
  .layout-list & {
    margin-top: 7.8rem;
    margin-bottom: 3.9rem;
  }

  .page-articles-home & {
    /* there's pagination under h1 in /articles/ so reduce the gap: */
    margin-bottom: 1.9rem;
  }
}

h2,
.h2 {
  letter-spacing: -0.04em;
  font-size: 3.6rem; /* 0.6x */
  line-height: 1;
  @media (min-width: $mid) {
    font-size: 4.5rem; /* 0.75x */
  }
  @media (min-width: $thousand) {
    font-size: 6rem;
    /* line-height: 7.8rem; */
  }

  margin-top: 3.9rem;
  margin-bottom: 3.9rem;
  font-weight: bold;
}
h3,
.h3 {
  letter-spacing: -0.04em;
  font-size: 3.7rem;
  line-height: 3.9rem;
  margin-top: 3.9rem;
  margin-bottom: 3.9rem;
  font-weight: bold;
}
h4,
.h4 {
  font-size: 2.3rem;
  line-height: 3.9rem;
  margin-top: 3.9rem;
  margin-bottom: 0;
}
h5,
.h5 {
  font-size: 2.3rem;
  line-height: 3.9rem;
  margin-top: 3.9rem;
  margin-bottom: 0;
}
p,
ul,
ol,
pre,
table,
blockquote {
  margin-top: 0;
  margin-bottom: 1rem;
}
ul ul,
ol ol,
ul ol,
ol ul {
  margin-top: 0;
  margin-bottom: 0;
}

/* Let's make sure all's aligned */
hr,
.hr {
  border: $border;
  margin: -1px 0;
}
a,
b,
i,
strong,
em,
small,
code {
  line-height: 0;
}
sub,
sup {
  line-height: 0;
  position: relative;
  vertical-align: baseline;
}
sup {
  top: -0.5em;
}
sub {
  bottom: -0.25em;
}

/* MIXINS */
/* -------------------------------------------------------------------------- */

@mixin thickUnderline($color) {
  position: relative;
  z-index: 10;
  text-decoration: none !important;
  &:after {
    z-index: -1;
    position: absolute;
    content: "";
    background-color: $color;
    width: 100%;
    height: 0.5rem;
    bottom: -0.2rem;
    left: 0;
  }
}

@mixin underline($color) {
  position: relative;
  z-index: 10;
  text-decoration: underline;
  text-decoration-color: $color;
}

/* https://stackoverflow.com/a/45820289/3943954 */
@mixin on-hover {
  @media (hover: hover) and (pointer: fine) {
    &:hover {
      @content;
    }
  }
}

/* automatic-light and light themes are on by default */
@mixin darkTheme {
  /* automatic dark theme */
  @media (prefers-color-scheme: dark) {
    :root:not([data-theme="light"]) & {
      @content;
    }
  }
  /* manually enabled dark theme */
  :root[data-theme="dark"] & {
    @content;
  }
}

@mixin narrowColumns {
  @media (min-width: $mid) and (max-width: 820px),
    (min-width: $thousand) and (max-width: 1280px) {
    @content;
  }
}

/* GENERAL */
/* -------------------------------------------------------------------------- */

::-moz-selection {
  background-color: $yellow;
  @include darkTheme {
    background-color: $darkYellow;
    color: $black;
  }
}

::selection {
  background-color: $yellow;
  @include darkTheme {
    background-color: $darkYellow;
    color: $black;
  }
}

html {
  margin: 0;
  padding: 0;
  font-size: 62.5%; /* now, 1.0 rem = 10px */
  @media (min-width: $mid) {
    overflow-y: scroll; /* always show scrollbars */
  }
}

body {
  margin: 0;
  @media (min-width: $narrow) {
    padding: 1rem;
  }
  width: calc(100% - 2rem);
  height: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-content: stretch;
  background-color: $borderGrey;

  /* hyphenation for small screens only */
  hyphens: auto;
  hyphenate-limit-chars: 6 3 3;
  hyphenate-limit-lines: 2;
  hyphenate-limit-last: always;
  hyphenate-limit-zone: 8%;
  /* @media (min-width: $mid) {
    hyphens: none;
  } */

  .container {
    height: 100%;
    background-color: #fff;
    flex: 1;

    &.container-articles,
    &.container-package {
      /* tag pages under /articles/tag/zzz/ have protruding hash signs
      so we need it here but other pages, especially, /open-source/
      protrude outside this .container and it's normal */
      overflow: hidden;
    }

    /* used to position large absolute things like */
    /* on Open Source page /os/ */
    position: relative;
  }

  @include darkTheme {
    background-color: $black;
    .container {
      background-color: $surfaceDark;
    }
  }
}

table {
  /* width: 100%; */
  table-layout: fixed;
  border-collapse: collapse;

  th {
    background-color: $lighterGrey;
    @include darkTheme {
      background-color: $lighterDark;
    }
  }
  th,
  td {
    padding: 1rem;

    border: 1px solid $borderGrey;
    @include darkTheme {
      border-color: $borderDark;
    }
  }
}

